{
  "name": "p2p-bookmarklet",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server --https",
    "test": "docker-compose run start_dependencies && docker-compose run app npm run test-mocha",
    "test-mocha": "mocha --recursive --timeout 5000",
    "build": "webpack --mode=production",
    "build-dev": "webpack --mode=development",
    "eslint": "eslint --fix ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "copy-webpack-plugin": "^4.6.0",
    "eslint": "~5.13.0",
    "eslint-config-airbnb-base": "~13.1.0",
    "eslint-config-prettier": "~4.0.0",
    "eslint-plugin-import": "~2.16.0",
    "eslint-plugin-prettier": "~3.0.1",
    "mocha": "^5.2.0",
    "prettier": "~1.15.3",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "src/": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
